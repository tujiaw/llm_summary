{
  "manifest_version": 3,
  "name": "网页摘要",
  "version": "1.0",
  "description": "一键获取网页内容的精炼摘要，让您快速理解核心内容",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["turndown.js", "marked.js"],
      "matches": ["<all_urls>"]
    }
  ]
}